@model IEnumerable<FitnessProject.Web.Mvc.UserInfoModel>

@{
    ViewBag.Title = "User Info";
}

<h2>@User.Identity.Name</h2>

<p>
    @Html.ActionLink("Add new location", "GetAddress", "Location")
</p>


<table class="table">
    <tr>
        
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PlaceName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PlaceName)
        </td>
        <td>

            @Html.ActionLink("Delete a location", "LocationDelete","Location", new { id = item.Id },null) 
        </td>
    </tr>
    }
</table>
